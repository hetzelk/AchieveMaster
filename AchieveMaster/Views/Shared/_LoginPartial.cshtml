@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(User.Identity.Name, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "View Profile" })
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Edit Profile", "Edit", "Manage", routeValues: null, htmlAttributes: new { id = "profileLink" })</li>
                <li>@Html.ActionLink("My Requests", "MyRequests", "Request", routeValues: null, htmlAttributes: new { id = "editlink" })</li>
                <li>@Html.ActionLink("Old Requests", "OldRequests", "Request", routeValues: null, htmlAttributes: new { id = "oldposts" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                <li role="separator" class="divider"></li>
                <li>&nbsp;&nbsp; @DateTime.Now.Year - Achieve Master</li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">       
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "profileLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
