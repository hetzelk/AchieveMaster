@model AchieveMaster.Models.Messages

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="col-md-6">
    <h2>@Html.DisplayFor(model => model.Title)</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstPerson)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstPerson)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SecondPerson)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SecondPerson)
        </dd>
    </dl>
    </div>
    <div class="col-md-6">
        <h2>Conversation Messages</h2>
        <hr />
        <p>Conversation Start</p>
        <p>
            @Html.DisplayFor(model => model.Conversation)
        </p>
        @foreach(string line in ViewBag.SplitConversation)
        {               
            <p>line</p>
        }
        <p>Conversation End</p>

        <div class="form-group">
            <div class="col-md-10">
                <textarea id="message" style="width:500px;"></textarea>
                @Html.ValidationMessageFor(model => model.Conversation, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>

    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>